{
    "app-id": "org.gnome.Screenshot",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-screenshot",
    "finish-args": [
	"--share=ipc",
	"--socket=x11",
	"--socket=wayland",
	"--talk-name=org.gnome.Shell.Screenshot",
	"--filesystem=xdg-run/dconf",
	"--filesystem=~/.config/dconf:ro",
	"--filesystem=home",
	"--talk-name=ca.desrt.dconf",
	"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
	"/include",
	"/lib/pkgconfig",
	"/share/pkgconfig",
	"/share/aclocal",
	"/man",
	"/share/man",
	"/share/gtk-doc",
	"/share/vala",
	"*.la",
	"*.a"
    ],
    "modules": [
	{
	    "name": "libcanberra-gtk3",
	    "cleanup": [
		"/bin",
		"/lib/gnome-settings-daemon-3.0",
		"/share/doc",
		"/share/gdm",
		"/share/gnome"
	    ],
	    "sources": [
		{
		    "type": "archive",
		    "url": "http://0pointer.de/lennart/projects/libcanberra/libcanberra-0.30.tar.xz",
        "sha256": "cb7bad07790a27f97ba57909d3d09726d564bd3111c37ec3e728b8d5d521e630"
		}
	    ]
	},
	{
	    "name": "gnome-screenshot",
	    "buildsystem": "meson",
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://gitlab.gnome.org/GNOME/gnome-screenshot/-/archive/3.32.0/gnome-screenshot-3.32.0.tar.gz",
        "sha256": "8041fb78516b9f5503fcb3c43f6c3701065d4b66"
		}
	    ]
	}
    ]
}
